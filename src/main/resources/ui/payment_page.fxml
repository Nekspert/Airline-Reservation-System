<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.myairline.airline_reservation.ui.PaymentController"
      styleClass="section-pane">

    <!-- Фильтрация по пользователю (только для админа) -->
    <HBox fx:id="adminFilterBox" spacing="8">
        <Label text="Пользователь:"/>
        <ComboBox fx:id="userCombo" promptText="Выберите пользователя"/>
    </HBox>

    <!-- Кнопка «Оплатить все» для пассажира -->
    <Button fx:id="payAllBtn" text="Оплатить все PENDING"/>

    <!-- Таблица платежей -->
    <TableView fx:id="paymentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colPayId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colPayBook" text="Бронь" prefWidth="100"/>
            <TableColumn fx:id="colPayAmount" text="Сумма" prefWidth="100"/>
            <TableColumn fx:id="colPayStatus" text="Статус" prefWidth="100"/>
            <TableColumn fx:id="colPayDate" text="Дата" prefWidth="150"/>
            <TableColumn fx:id="colPayAction" text="Действие" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
