<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.myairline.airline_reservation.ui.FlightController"
            styleClass="section-pane">

    <!-- Фильтр / Форма сверху -->
    <top>
        <GridPane hgap="10" vgap="5">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <TextField fx:id="flightNumberField"
                       promptText="Номер рейса"
                       GridPane.columnIndex="0"/>
            <DatePicker fx:id="departureDatePicker"
                        promptText="Дата вылета"
                        GridPane.columnIndex="1"/>
            <ComboBox fx:id="routeCombo"
                      promptText="Маршрут"
                      GridPane.columnIndex="2"/>
            <ComboBox fx:id="strategyCombo"
                      promptText="Тариф"
                      GridPane.columnIndex="3"/>

            <Button text="Добавить"
                    onAction="#onAddFlight"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="2"/>
            <Button text="Refresh"
                    onAction="#onLoadFlights"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="3"/>
        </GridPane>
    </top>

    <!-- Основная таблица по центру -->
    <center>
        <TableView fx:id="flightsTable" prefHeight="400">
            <columns>
                <TableColumn text="№"/>
                <TableColumn text="Вылет"    prefWidth="150"/>
                <TableColumn text="Прибытие" prefWidth="150"/>
                <TableColumn text="Маршрут"  prefWidth="200"/>
                <TableColumn text="Цена"     prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <!-- Статус или подробности внизу -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="statusLabel" text="Готово"/>
        </HBox>
    </bottom>
</BorderPane>
